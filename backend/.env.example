# ============================================================================
# SENTINELA - Variáveis de Ambiente
# Copie este arquivo para .env e preencha os valores
# ============================================================================

# Ambiente
NODE_ENV=development
PORT=3001

# Banco de Dados PostgreSQL
# Formato: postgresql://usuario:senha@host:porta/banco
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sentinela"

# Redis (para filas e cache)
REDIS_URL="redis://localhost:6379"

# Segurança JWT
# Gere uma chave segura com: openssl rand -base64 64
JWT_SECRET="sua-chave-secreta-muito-longa-com-pelo-menos-32-caracteres"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Criptografia de Chaves de API
# Gere uma chave com: openssl rand -base64 32
ENCRYPTION_KEY="sua-chave-de-criptografia-com-32-caracteres"

# Diretório para armazenar relatórios PDF
REPORTS_DIR="./reports"

# URLs
FRONTEND_URL="http://localhost:5173"
API_URL="http://localhost:3001"
